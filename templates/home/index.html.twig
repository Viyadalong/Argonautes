{% extends 'base.html.twig' %}
{% block metadescription %}Embarquez avec Jason, en expédition à la recherche de la toison d'Or.{% endblock %}
{% block title %} Viyada | Les Argonautes{% endblock %}

{% block body %}
<!-- Header section -->
<header>
    <h1>
        <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png"
            alt="Wild Code School logo" />
        Les Argonautes
    </h1>
</header>

<!-- Main section -->
<main>
    <section class="container">
        <h2 class="m-4">Ajouter un(e) Argonaute</h2>
            <div class="d-flex justify-content-center">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                <button type="submit" class="btn btn-danger mx-auto d-block mb-4">Ajouter</button>
                {{ form_end(form) }}
            </div>
        <h3 class="m-5 text-center">Membres de l'équipage</h3>
            <ul class="list-unstyled text-center">
                {% for member in members %}
                <li>{{ member.name }}</li>
                {% endfor %}
            </ul>
    </section>
</main>

<footer>
    <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>
{% endblock %}