{% extends 'base.html.twig' %}
{% block metadescription %}Embarquez avec Jason, en expédition à la recherche de la toison d'Or.{% endblock %}
{% block title %}L'équipage Argonautes{% endblock %}

{% block body %}
<!-- Header section -->
<header>
    <h1>
        <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png"
            alt="Wild Code School logo" />
        Les Argonautes
    </h1>
</header>

<!-- Main section -->
<main>
    <section class="container">
        <div class="row">
            <div class="mx-auto">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-sm-12 text-center m-3">
                            <h2>Ajouter une recrue à l'équipage</h2>
                            {{ form_start(form) }}
                            <div class="form-group row mt-4">
                                {{ form_row(form.name) }}
                            </div>
                            <button type="submit" class="btn btn-danger">Ajouter</button>
                            {{ form_end(form) }}
                            <div class="text-center mt-3">
                            {% for member in members %}
                                <h3>{{ member.name }}</h3>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<footer>
    <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>
{% endblock %}